<%= form_for(@message) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                    <li>
                        <%= full_message %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>

<div class="row">
  <label class="col-sm-1 control-label">名前：</label>
  <div class="col-sm-2">
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <label class="col-sm-1 control-label">年齢：</label>
  <div class="col-sm-2">
    <%= f.text_field :age, class: "form-control" %>
  </div>
  <label class="col-sm-1 control-label">内容：</label>
  <div class="col-sm-3">
    <%= f.text_area :body, class: "form-control", row: "3" %>
  </div>
  <div class="col-sm-2">
    <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
</div>
<% end %>